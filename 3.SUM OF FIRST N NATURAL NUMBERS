import java.util.Scanner;
public class sum {
	public static void main(String[] args) {
	Scanner inp=new Scanner(System.in);
	System.out.println("ENter a number:");
	int n=inp.nextInt();
	int sum=getsum(n);
	System.out.println(sum);
	
}
	static int getsum(int n) {
		if(n==0) {
			return n;
		}
		else
		{
			return n+getsum(n-1);
		}
	}
}
